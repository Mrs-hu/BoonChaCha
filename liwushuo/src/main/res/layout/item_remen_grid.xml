<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="300dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_remen_grid_iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/item_remen_grid__title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_remen_grid_iv"
                android:padding="8dp"
                android:lines="2"
                android:text="标题"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_remen_grid_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="8dp"
                android:text="价格"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_remen_grid_likes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_feed_favourite_normal"
                android:gravity="center"
                android:padding="10dp"
                android:text="点赞"
                android:textSize="14sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>