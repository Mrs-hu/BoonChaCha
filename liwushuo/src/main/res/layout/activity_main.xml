<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.my.liwushuo.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:background="@color/crimson"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/tv_tb_main"
            android:text="礼物说"
            android:textSize="@dimen/textSizeA"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_below="@+id/tb_main"
        android:layout_above="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/seetao_prompt_dialog_bg"
        android:layout_height="60dp">
        <RadioButton
            android:id="@+id/rb_zhinan"
            style="@style/main_rb_style"
            android:drawableTop="@drawable/selector_rb_bg_zhinan"
           android:text="指南" />
        <RadioButton
            android:id="@+id/rb_remen"
            style="@style/main_rb_style"
            android:drawableTop="@drawable/selector_rb_bg_zhinan"
            android:text="热门" />
        <RadioButton
            android:id="@+id/rb_fenlei"
            style="@style/main_rb_style"
            android:drawableTop="@drawable/selector_rb_bg_zhinan"
            android:text="分类" />
        <RadioButton
            android:id="@+id/rb_wode"
            style="@style/main_rb_style"
            android:drawableTop="@drawable/selector_rb_bg_zhinan"
            android:text="我的" />

    </RadioGroup>
</RelativeLayout>
